@model InfosecAcademyBudgetManagement.Models.IncomeItem

@{
    ViewData["Title"] = "Gelir Detay";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Gelir Detay</h1>
        <div class="page-subtitle">Kayıt detaylarını inceleyin.</div>
    </div>
</div>

<div class="card content-card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Name)</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Amount)</dt>
            <dd class="col-sm-9">@Model.Amount.ToString("N2") TL</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Date)</dt>
            <dd class="col-sm-9">@Model.Date.ToString("dd.MM.yyyy")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Source)</dt>
            <dd class="col-sm-9">@Model.Source</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Counterparty)</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Counterparty) ? Model.Counterparty : "-")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Description)</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Description) ? Model.Description : "-")</dd>
        </dl>
    </div>
</div>

<div class="form-actions mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Geri</a>
</div>
