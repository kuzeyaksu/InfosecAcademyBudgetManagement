@model Cost.CostItem

@{
    ViewData["Title"] = "Masraf Düzenle";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Masraf Düzenle</h1>
        <div class="page-subtitle">Masraf kaydını güncelleyin.</div>
    </div>
</div>

<div class="card form-card">
    <div class="card-body">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Amount" class="form-label"></label>
                    <div class="input-group">
                        <input asp-for="Amount" class="form-control" inputmode="decimal" />
                        <span class="input-group-text">TL</span>
                    </div>
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Date" class="form-label"></label>
                    <input asp-for="Date" class="form-control" type="text" asp-format="{0:dd.MM.yyyy}" placeholder="DD.MM.YYYY" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="CategoryId" class="form-label"></label>
                    <select asp-for="CategoryId" class="form-select" asp-items="@(ViewData["Categories"] as SelectList)">
                        <option value="">Seçiniz...</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="col-md-12 mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="col-md-12 mb-3">
                    <label class="form-label">PDF Evrak</label>
                    <input type="file" name="document" class="form-control" accept="application/pdf" />
                    <span class="text-danger">@Html.ValidationMessage("Document")</span>
                </div>
            </div>

            <div class="form-actions mt-2">
                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

