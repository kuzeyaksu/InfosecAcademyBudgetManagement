@model IEnumerable<InfosecAcademyBudgetManagement.Models.PaymentScheduleListItemViewModel>

@{
    ViewData["Title"] = "Ödeme Takvimi";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Ödeme Takvimi</h1>
        <div class="page-subtitle">Borç ve alacak vadelerini yönetin.</div>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Kayıt
    </a>
</div>

<div class="card content-card">
    <div class="card-body">
        <table id="paymentScheduleTable" class="table table-striped align-middle mb-0">
            <thead>
                <tr>
                    <th>Başlık</th>
                    <th>Tür</th>
                    <th>Tutar</th>
                    <th>Vade</th>
                    <th>Cari</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
@foreach (var item in Model ?? Enumerable.Empty<InfosecAcademyBudgetManagement.Models.PaymentScheduleListItemViewModel>())
{
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Type</td>
                    <td>@item.Amount.ToString("N2") TL</td>
                    <td>@item.DueDate.ToString("dd.MM.yyyy")</td>
                    <td>@item.CounterpartyName</td>
                    <td>
@if (item.IsSettled)
{
                        <span class="badge text-bg-success">Tamamlandı</span>
}
else
{
                        <span class="badge text-bg-warning">Bekliyor</span>
}
                    </td>
                    <td>
                        <form asp-action="ToggleSettled" asp-route-id="@item.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-outline-primary">Durum Değiştir</button>
                        </form>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-outline-danger">Sil</button>
                        </form>
                    </td>
                </tr>
}
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $("#paymentScheduleTable").DataTable({
                pageLength: 10,
                order: [[3, "asc"]],
                columnDefs: [{ orderable: false, targets: [6] }],
                language: { url: '@Url.Content("~/lib/datatables/i18n/tr.json")' }
            });
        });
    </script>
}
