@model IEnumerable<InfosecAcademyBudgetManagement.Models.CounterpartyListItemViewModel>

@{
    ViewData["Title"] = "Cari Kartlar";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Cari Kartlar</h1>
        <div class="page-subtitle">Müşteri ve tedarikçi kayıtlarını yönetin.</div>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Ekle
    </a>
</div>

<div class="card content-card">
    <div class="card-body">
        <table id="counterpartyTable" class="table table-striped align-middle mb-0">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Type)</th>
                    <th>@Html.DisplayNameFor(m => m.TaxNumber)</th>
                    <th>@Html.DisplayNameFor(m => m.Phone)</th>
                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
@foreach (var item in Model ?? Enumerable.Empty<InfosecAcademyBudgetManagement.Models.CounterpartyListItemViewModel>())
{
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Type</td>
                    <td>@(string.IsNullOrWhiteSpace(item.TaxNumber) ? "-" : item.TaxNumber)</td>
                    <td>@(string.IsNullOrWhiteSpace(item.Phone) ? "-" : item.Phone)</td>
                    <td>@(string.IsNullOrWhiteSpace(item.Email) ? "-" : item.Email)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary"><i class="bi bi-eye"></i></a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
}
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $("#counterpartyTable").DataTable({
                pageLength: 10,
                order: [[1, "asc"], [0, "asc"]],
                columnDefs: [{ orderable: false, targets: [5] }],
                language: { url: '@Url.Content("~/lib/datatables/i18n/tr.json")' }
            });
        });
    </script>
}
